<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@+id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.dicoding.subtest.ui.view.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_upcoming"
        android:name="com.dicoding.subtest.ui.view.EventListFragment"
        android:label="Event List"
        tools:layout="@layout/fragment_event_list" />

    <fragment
        android:id="@+id/navigation_finished"
        android:name="com.dicoding.subtest.ui.view.InactiveEventsFragment"
        android:label="Inactive Events"
        tools:layout="@layout/fragment_inactive_events" />

    <fragment
        android:id="@+id/favoriteEventsFragment"
        android:name="com.dicoding.subtest.ui.view.FavoriteEventsFragment"
        android:label="Favorite Events"
        tools:layout="@layout/fragment_favorite_events" />
</navigation>